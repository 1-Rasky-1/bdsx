{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build"
        },
        {
            "label": "Package",
            "type": "process",
            "command": "node",
            "args": ["./package/index"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Package (No Publish)",
            "type": "process",
            "command": "node",
            "args": ["./package/index", "--no-publish"],
            "group": "build",
            "problemMatcher": []
        }
    ]
}