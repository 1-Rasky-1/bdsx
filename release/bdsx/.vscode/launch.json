    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${env:UserProfile}/.bds",
            "runtimeExecutable": "${env:UserProfile}/.bds/bedrock_server.exe",
            "args": ["${workspaceFolder}"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "timeout": 30000
        }
    ]
}