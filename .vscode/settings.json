{
    "files.trimTrailingWhitespace": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "editor.insertSpaces": true,
    "files.exclude": {
        "**/*.js": { "when": "$(basename).ts"},
        "bdsx/**/*.js.map": true
    },
    "search.exclude": {
        "bdsx/**/*.js": true,
        "bdsx/**/*.d.ts": true
    },
    "npm.autoDetect": "off",
    "typescript.tsc.autoDetect": "off"
}